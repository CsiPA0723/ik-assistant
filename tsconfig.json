{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ES6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*", "src/@types/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}